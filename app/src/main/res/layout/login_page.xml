<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".login_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="#FFFFFF">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/login"
            android:layout_marginTop="120dp"
            android:contentDescription="@string/image" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/email"
            android:drawableLeft="@drawable/resize_email_icon"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="10sp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="50dp"
            android:textStyle="normal"
            android:drawableStart="@drawable/resize_email_icon" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pass"
            android:drawableLeft="@drawable/resize_password_icon"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="10sp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="50dp"
            android:textStyle="normal"
            android:drawableStart="@drawable/resize_password_icon" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:padding="12dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#fff"
            android:background="@drawable/gradient"
            android:layout_marginTop="20dp"
            android:id="@+id/login" />

        <TextView
            android:id="@+id/forgetPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textSize="10sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_signup_form"
            android:textSize="15sp"
            android:layout_marginTop="40dp"/>
        </LinearLayout>
</ScrollView>