<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".signup_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:padding="15dp">
        <ImageView
            android:id="@+id/userProfilePhoto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/adduser"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/image" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/username"
            android:drawableLeft="@drawable/resize_username_icon"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/username_hint"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="10sp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="60dp"
            android:textStyle="normal"
            android:drawableStart="@drawable/resize_username_icon" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/location"
            android:drawableLeft="@drawable/resize_location_signup_icon"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/country"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="10sp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:drawableStart="@drawable/resize_location_signup_icon" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/experience"
            android:drawableLeft="@drawable/resize_experience_icon"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/experience_level_hint"
            android:padding="10dp"
            android:textSize="10sp"
            android:inputType="text"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:drawableStart="@drawable/resize_experience_icon" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/email"
            android:drawableLeft="@drawable/resize_email_icon"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="10sp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:drawableStart="@drawable/resize_email_icon" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pass"
            android:drawableLeft="@drawable/resize_password_icon"
            android:drawablePadding="20dp"
            android:fontFamily="sans-serif"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="10sp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:drawableStart="@drawable/resize_password_icon" />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/register"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="sans-serif-black"
            android:textColor="#fff"
            android:background="@drawable/gradient"
            android:layout_marginTop="50dp" />
        </LinearLayout>
</androidx.core.widget.NestedScrollView>